<body>
  <h1>Robot Kontrol</h1>
  <div class="button-container">
    <div></div>
    <a class="control-button" ontouchstart="sendRequest('forward')" ontouchend="sendRequest('stop')" onmousedown="sendRequest('forward')" onmouseup="sendRequest('stop')">İleri</a>
    <div></div>

    <a class="control-button" ontouchstart="sendRequest('left')" ontouchend="sendRequest('stop')" onmousedown="sendRequest('left')" onmouseup="sendRequest('stop')">Sol</a>
    <a class="control-button" ontouchstart="sendRequest('stop')" ontouchend="sendRequest('stop')" onmousedown="sendRequest('stop')" onmouseup="sendRequest('stop')">DUR</a>
    <a class="control-button" ontouchstart="sendRequest('right')" ontouchend="sendRequest('stop')" onmousedown="sendRequest('right')" onmouseup="sendRequest('stop')">Sağ</a>

    <div></div>
    <a class="control-button" ontouchstart="sendRequest('backward')" ontouchend="sendRequest('stop')" onmousedown="sendRequest('backward')" onmouseup="sendRequest('stop')">Geri</a>
    <div></div>
  </div>

  <div class="farlar-container">
    <h2>Farlar</h2>
    <button class="farlar-button" onclick="sendRequest('farlarOn')">Farları Aç</button>
    <button class="farlar-button off" onclick="sendRequest('farlarOff')">Farları Kapat</button>
  </div>

  <script>
    // Buraya ESP32'nizin IP adresini girin!
    // Sizin IP adresiniz: 172.20.10.2
    const esp32Ip = "172.20.10.2";

    function sendRequest(action) {
      var xhttp = new XMLHttpRequest();
      xhttp.open("GET", "http://" + esp32Ip + "/" + action, true);
      xhttp.send();
      console.log("Gönderilen istek: " + action);
    }
  </script>
